 <!-- Speedbrake Logic                                                -->
 <!-- =============================================================== -->

	<filter>
		<debug>false</debug>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<condition>
				<and>
					<equals>
						<property>/gear/gear[1]/wow</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/gear/gear[2]/wow</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
			<expression>
				<product>
					<sum>
						<property>/controls/flight/spoiler-l-sum</property>
						<property>/controls/flight/spoiler-r-sum</property>
					</sum>
					<value>0.15</value>
				</product>
			</expression>
		</input>
		<input>
			<condition>
				<or>
					<equals>
						<property>/gear/gear[1]/wow</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/gear/gear[2]/wow</property>
						<value>1</value>
					</equals>
				</or>
			</condition>
			<expression>
				<product>
					<sum>
						<property>/controls/flight/spoiler-l-sum</property>
						<property>/controls/flight/spoiler-r-sum</property>
					</sum>
					<value>0.1</value>
				</product>
			</expression>
		</input>
		<output>/controls/flight/speedbrake-output</output>
	</filter>
	
	<flipflop>
		<name>Auto Speedbrake</name>
		<debug>false</debug>
		<type>RS</type>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/controls/flight/speedbrake-arm</property>
						<value>1</value>
					</equals>
					<less-than>
						<property>/engines/engine[0]/reverser-pos-norm</property>
						<value>0.01</value>
					</less-than>
					<less-than>
						<property>/engines/engine[1]/reverser-pos-norm</property>
						<value>0.01</value>
					</less-than>
					<less-than>
						<property>/engines/engine[2]/reverser-pos-norm</property>
						<value>0.01</value>
					</less-than>
				</and>
			</condition>
		</enable>
		<S>
			<and>
				<less-than>
					<property>/controls/engines/engine[0]/throttle-pos</property>
					<value>0.15</value>
				</less-than>
				<less-than>
					<property>/controls/engines/engine[1]/throttle-pos</property>
					<value>0.15</value>
				</less-than>
				<less-than>
					<property>/controls/engines/engine[2]/throttle-pos</property>
					<value>0.15</value>
				</less-than>
				<property>/gear/gear[1]/wow</property>
				<property>/gear/gear[2]/wow</property>
				<greater-than>
					<property>/velocities/groundspeed-kt</property>
					<value>60</value>
				</greater-than>
			</and>
		</S>
		<R>
			<or>
				<greater-than>
					<property>/controls/engines/engine[0]/throttle-pos</property>
					<value>0.16</value>
				</greater-than>
				<greater-than>
					<property>/controls/engines/engine[1]/throttle-pos</property>
					<value>0.16</value>
				</greater-than>
				<greater-than>
					<property>/controls/engines/engine[2]/throttle-pos</property>
					<value>0.16</value>
				</greater-than>
			</or>
		</R>
		<output>/controls/flight/speedbrake-lever</output>	
	</flipflop>
	
	<filter>
		<name>Auto Speedbrake Limiter</name>
		<type>gain</type>
		<gain>1</gain>
		<input>/controls/flight/speedbrake-lever</input>
		<output>
			<property>/controls/flight/speedbrake</property>
			<property>/controls/flight/speedbrake-norm</property>
		</output>
		<min>0</min>
		<max>
			<condition>
				<not><property>/gear/gear[0]/wow</property></not>
			</condition>
			<value>0.6</value>
		</max>
		<max>
			<condition>
				<property>/gear/gear[0]/wow</property>
			</condition>
			<value>1.0</value>
		</max>
	</filter>

