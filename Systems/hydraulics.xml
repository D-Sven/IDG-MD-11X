	<!-- Spoiler L1 -->
	
	<filter>
		<debug>false</debug>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<condition>
				<greater-than-equals>
					<property>/systems/hydraulic/sys2-psi</property>
					<value>1500</value>
				</greater-than-equals>
			</condition>
			<expression>
				<sum>
					<property>/controls/flight/speedbrake-norm</property> 
					<table>
						<property>/controls/flight/aileron</property> 
						<entry><ind> 0.0</ind><dep>  0</dep></entry>
						<entry><ind>-1.0</ind><dep>1.0</dep></entry>
					</table>
				</sum>
			</expression>
		</input>
		<input>
			<condition>
				<less-than>
					<property>/systems/hydraulic/sys2-psi</property>
					<value>1500</value>
				</less-than>
			</condition>
			<value>0.0</value>
		</input>
		<output>/controls/flight/spoiler-l1-cmd</output>
		<min>0.0</min>
		<max>1.0</max>
	</filter>
	
	<filter>
		<debug>false</debug>
		<type>noise-spike</type>
		<input>/controls/flight/spoiler-l1-cmd</input>
		<output>/controls/flight/spoiler-l1</output>
		<max-rate-of-change>0.5</max-rate-of-change>
	</filter>
 
