	<!-- Aileron L Outboard -->

	<filter>
		<debug>false</debug>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<condition>
				<and>
					<less-than>
						<property>/systems/hydraulic/sys2-psi</property>
						<value>1500</value>
					</less-than>
					<less-than>
						<property>/systems/hydraulic/sys3-psi</property>
						<value>1500</value>
					</less-than>
				</and>
			</condition>
			<property>/systems/hydraulic/aileron-droop</property>
		</input>
		<input>
			<condition>
				<and>
					<less-than>
						<property>/fdm/jsbsim/fcs/slat-pos-deg</property>
						<value>2</value>
					</less-than>
					<less-than>
						<property>/fdm/jsbsim/fcs/flap-pos-deg</property>
						<value>2</value>
					</less-than>
					<or>
						<greater-than-equals>
							<property>/systems/hydraulic/sys2-psi</property>
							<value>1500</value>
						</greater-than-equals>
						<greater-than-equals>
							<property>/systems/hydraulic/sys3-psi</property>
							<value>1500</value>
						</greater-than-equals>
					</or>
				</and>
			</condition>
			<value>0</value>
		</input>
		<input>
			<condition>
				<and>
					<or>
						<greater-than-equals>
							<property>/fdm/jsbsim/fcs/slat-pos-deg</property>
							<value>2</value>
						</greater-than-equals>
						<greater-than-equals>
							<property>/fdm/jsbsim/fcs/flap-pos-deg</property>
							<value>2</value>
						</greater-than-equals>
					</or>
					<or>
						<greater-than-equals>
							<property>/systems/hydraulic/sys2-psi</property>
							<value>1500</value>
						</greater-than-equals>
						<greater-than-equals>
							<property>/systems/hydraulic/sys3-psi</property>
							<value>1500</value>
						</greater-than-equals>
					</or>
				</and>
			</condition>
			<expression>
				<table>
					<property>/fdm/jsbsim/fcs/aileron-left-droop</property> 
					<entry><ind>-0.95</ind><dep>-0.5</dep></entry>
					<entry><ind> 0.00</ind><dep> 0.0</dep></entry>
					<entry><ind> 0.95</ind><dep> 0.5</dep></entry>
				</table>
			</expression>
		</input>
		<output>/controls/flight/aileron-out-left-cmd</output>
		<min>-0.5</min>
		<max>0.5</max>
	</filter>
	
	<filter>
		<debug>false</debug>
		<type>noise-spike</type>
		<input>/controls/flight/aileron-out-left-cmd</input>
		<output>/controls/flight/aileron-out-left</output>
		<max-rate-of-change>2.5</max-rate-of-change>
	</filter>
	
